package com.hcm.payload.request;

import java.time.LocalDate;
import java.util.List;

import com.fasterxml.jackson.annotation.JsonFormat;
import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.annotation.JsonPropertyOrder;
import com.hcm.entity.Claim;
import com.hcm.entity.ClaimType;
import com.hcm.entity.Member;
import com.hcm.entity.Physician;

import lombok.Data;
import lombok.extern.slf4j.Slf4j;

//@JsonFormat(shape = JsonFormat.Shape.ARRAY)
//@JsonPropertyOrder({
//"claims"
//})
@Slf4j
@Data
public class SubmitClaimRequest {
	
	//@JsonProperty("claims")
	private List<Claim> claims;
	
	
	
	
	public void getClaimsList() {
		Claim c1 = new Claim();
		c1.setId(1l);
		c1.setAmount(1000);
		c1.setRemarks("abcd");
		c1.setClaimDate(LocalDate.now());
		c1.setType(ClaimType.Dental);
		c1.setSelect(false);
		Member m = new Member("priyanka", "shinde", "priyanka9497@gmail.com", "address", "delhi", "umbraj", LocalDate.now());
		m.setId(2l);
		Physician p = new Physician();
		p.setName("test");
		m.setPhysician(p);
		c1.setMember(m);
		claims.add(c1);
		
		Claim c2 = new Claim();		
		c2.setId(1l);
		c2.setAmount(1000);
		c2.setRemarks("abcd");
		c2.setClaimDate(LocalDate.now());
		c2.setType(ClaimType.Dental);
		c2.setSelect(false);
		c2.setMember(m);
		claims.add(c2);
		
		for(Claim c: claims) {
			log.debug(c.toString());
		}
		
		
		

	}
	
}
